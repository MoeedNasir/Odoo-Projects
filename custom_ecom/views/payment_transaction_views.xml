<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_custom_payment_transaction_tree" model="ir.ui.view">
        <field name="name">custom.payment.transaction.tree</field>
        <field name="model">custom.payment.transaction</field>
        <field name="arch" type="xml">
            <list string="Payment Transactions">
                <field name="name"/>
                <field name="provider"/>
                <field name="transaction_id"/>
                <field name="amount"/>
                <field name="state"/>
                <field name="date"/>
                <field name="journal_entry_id"/>
            </list>
        </field>
    </record>

    <record id="view_custom_payment_transaction_form" model="ir.ui.view">
        <field name="name">custom.payment.transaction.form</field>
        <field name="model">custom.payment.transaction</field>
        <field name="arch" type="xml">
            <form string="Payment Transaction">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="provider"/>
                        <field name="transaction_id"/>
                        <field name="amount"/>
                        <field name="state"/>
                        <field name="date"/>
                        <field name="journal_entry_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_custom_payment_transaction" model="ir.actions.act_window">
        <field name="name">Payment Transactions</field>
        <field name="res_model">custom.payment.transaction</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_custom_payment_transaction" name="Transactions"
              parent="menu_custom_ecom_root" action="action_custom_payment_transaction"/>
</odoo>
