<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="website_sale_shop_inherit" inherit_id="website_sale.products">
        <xpath expr="//div[@id='products_grid']" position="before">
            <div id="filter_panel" class="p-3 border rounded mb-4">
                <h5>Filter Products</h5>
                <div class="row">
                    <div class="col-md-3">
                        <label>Brand</label>
                        <select id="brand_filter" class="form-control">
                            <option value="">All</option>
                            <t t-foreach="request.env['product.brand'].sudo().search([])" t-as="brand">
                                <option t-att-value="brand.id"><t t-esc="brand.name"/></option>
                            </t>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label>Min Price</label>
                        <input type="number" id="min_price" class="form-control"/>
                    </div>
                    <div class="col-md-3">
                        <label>Max Price</label>
                        <input type="number" id="max_price" class="form-control"/>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button id="apply_filter" class="btn btn-primary w-100">Apply</button>
                    </div>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@id='products_grid']" position="attributes">
            <attribute name="t-att-id">"products_grid_custom"</attribute>
        </xpath>
    </template>
</odoo>
