<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_payment_gateway_tree" model="ir.ui.view">
        <field name="name">payment.gateway.tree</field>
        <field name="model">payment.gateway</field>
        <field name="arch" type="xml">
            <list string="Payment Gateways">
                <field name="name"/>
                <field name="provider"/>
                <field name="active"/>
                <field name="test_mode"/>
            </list>
        </field>
    </record>

    <record id="view_payment_gateway_form" model="ir.ui.view">
        <field name="name">payment.gateway.form</field>
        <field name="model">payment.gateway</field>
        <field name="arch" type="xml">
            <form string="Payment Gateway">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="provider"/>
                        <field name="api_key" password="True"/>
                        <field name="publishable_key" password="True"/>
                        <field name="test_mode"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_payment_gateway" model="ir.actions.act_window">
        <field name="name">Payment Gateways</field>
        <field name="res_model">payment.gateway</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_payment_gateway" name="Payment Gateways" parent="menu_custom_ecom_root" action="action_payment_gateway"/>
</odoo>
